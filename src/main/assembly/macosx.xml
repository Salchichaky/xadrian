<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE assembly>
<assembly>
  <id>macosx</id>
  <formats>
    <format>zip</format>
  </formats>
  <baseDirectory>Xadrian.app</baseDirectory>
  <fileSets>
    <fileSet>
      <directory>src/main/assembly/macosx/</directory>
      <outputDirectory>/Contents/MacOS/</outputDirectory>
      <includes>
        <include>JavaApplicationStub</include>
      </includes>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly/macosx/</directory>
      <outputDirectory>/Contents/</outputDirectory>
      <includes>
        <include>PkgInfo</include>
        <include>Info.plist</include>
      </includes>
      <fileMode>0644</fileMode>
      <lineEnding>unix</lineEnding>
    </fileSet>
    <fileSet>
      <directory>src/main/assembly/macosx/</directory>
      <outputDirectory>/Contents/Resources/</outputDirectory>
      <includes>
        <include>*.icns</include>
      </includes>
      <fileMode>0644</fileMode>
    </fileSet>
    <fileSet>
      <directory></directory>
      <outputDirectory>/Contents/</outputDirectory>
      <includes>
        <include>LICENSE.txt</include>
      </includes>
      <fileMode>0644</fileMode>
      <lineEnding>unix</lineEnding>
    </fileSet>    
  </fileSets>
  <files>
    <file>
      <source>target/${artifactId}-${version}.jar</source>
      <outputDirectory>/Contents/Resources/Java/</outputDirectory>
      <destName>${artifactId}.jar</destName>
      <fileMode>0644</fileMode>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/Contents/Resources/Java/</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <excludes>
        <exclude>${groupId}:${artifactId}</exclude>
      </excludes>      
    </dependencySet>
  </dependencySets>
</assembly>